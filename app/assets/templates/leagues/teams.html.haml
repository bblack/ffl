%h1
    {{league.name}}
%p
    %a{'ng-href': '/player_value_changes.csv?league_id={{league.id}}', class: 'btn btn-primary'}
        %span.glyphicon.glyphicon-download-alt
        Player values
%table.table.table-condensed.table-striped
    %thead
        %tr
            %th Team
            %th Payroll
            %th Players
            %th{'ng-repeat' => 'pos in positions'} {{pos}}
    %tr{'ng-repeat' => 'team in teams'}
        %td
            %a{'ng-href' => './teams/{{team.id}}'} {{team.name}}
        %td {{team.payroll}}
        %td {{spotsTaken(team)}}
        %td{'ng-repeat' => 'pos in positions'} {{team.roster[pos]}}
