%h1
    {{league.name}}
%table.table.table-condensed.table-striped
    %thead
        %tr
            %th Team
            %th Payroll
            %th Players
            %th{'ng-repeat' => 'pos in positions'} {{pos}}
    %tr{'ng-repeat' => 'team in teams'}
        %td
            %a{'ng-href' => './teams/{{team.id}}'} {{team.name}}
        %td {{team.payroll}}
        %td {{spotsTaken(team)}}
        %td{'ng-repeat' => 'pos in positions'} {{team.roster[pos]}}
